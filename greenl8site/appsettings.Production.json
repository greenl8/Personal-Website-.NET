{
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_URL}"
  },
  "TokenKey": "${TOKEN_KEY}",
  "AdminUser": {
    "Username": "${ADMIN_USERNAME}",
    "Email": "${ADMIN_EMAIL}",
    "Password": "${ADMIN_PASSWORD}"
  },
  "FileStorage": {
    "UploadDirectory": "wwwroot/uploads",
    "BaseUrl": "${BASE_URL}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
} 